<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plastic">

    <EditText
        android:id="@+id/et_addname"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Item Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@id/et_addname"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/et_addname"
        android:layout_alignRight="@id/et_addname"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-120dp"
        android:layout_marginRight="-120dp"
        android:text="ADD ITEMS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_listofnames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_addname"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>